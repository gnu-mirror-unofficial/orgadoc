prefix      = @prefix@
exec_prefix = @exec_prefix@
##########################################################################
#  	the location of data files
datarootdir = @datarootdir@
DATADIR	    = @datadir@/orgadoc
DOCDIR	    = @docdir@/@PACKAGE_NAME@-@PACKAGE_VERSION@
distdir     = @top_srcdir@/@PACKAGE_NAME@-@PACKAGE_VERSION@/docs
DOCFILES    = orgadoc.texi version.texi orgadoc.man orgadoc-init-readme.man readme.xml
##########################################################################

##########################################################################
#  	name of program
DOCUMENT1 = orgadoc.texi
DOCUMENT2 = version.texi
##########################################################################

##########################################################################
#   build related files
BUILDFILES = Makefile.in
##########################################################################

all: $(PROGRAM)

$(PROGRAM):
	 $(DOCUMENT1) $(DOCUMENT2)

install:
	texi2html $(DOCUMENT1)
	texi2html $(DOCUMENT2)
	mkdir -p $(DESTDIR)$(DOCDIR)
	-cp $(DOCFILES) $(DESTDIR)$(DOCDIR)

clean:
	rm -f orgadoc.html
	rm -f version.html

distclean: clean
	rm -f Makefile
	rm -f *~ .#*

dist: clean
	mkdir $(distdir)
	cp $(BUILDFILES) $(distdir)
	cp $(DOCFILES) $(distdir)
